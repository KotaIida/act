<mujoco model="aloha_scene">
  <compiler meshdir="assets" texturedir="assets"/>

  <include file="aloha.xml"/>

  <statistic center="0 -0.1 0.2" extent="0.6" meansize="0.05"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="90" elevation="-20"/>
    <quality shadowsize="8192"/>
  </visual>

  <asset>
    <!-- Table dimensions (length x width x height in meters): 1.21x0.76x0.75 -->
    <mesh file="tablelegs.obj" scale="1.55 1.0 1.27"/>
    <mesh file="tabletop.obj" scale="1.75 1.1 1.0"/>

    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <texture type="2d" file="small_meta_table_diffuse.png"/>
    <texture type="2d" file="floor.png"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    <material name="table" texture="small_meta_table_diffuse"/>
    <material name="floor" texture="floor" texuniform="true" texrepeat="4 3" reflectance="0.2"/>
    <material name="metal" rgba="0.517 0.529 0.537 1"/>
  </asset>

  <default>
    <default class="frame">
      <geom group="1" type="mesh" material="black"/>
    </default>
  </default>

  <worldbody>
    <geom name="floor" size="4 4 0.05" type="plane" material="floor" pos="0 0 0" euler="0 0 1.56"/>
    <geom name="wall_right" pos="4 0 2" size="0.1 4 2" type="box" rgba="0.773 0.8 0.765 1"/>
    <geom name="wall_left" pos="-4 0 2" size="0.1 4 2" type="box" rgba="0.773 0.8 0.765 1"/>
    <geom name="wall_front" pos="0 4 2" size="4 0.1 2" type="box" rgba="0.773 0.8 0.765 1"/>
    <site name="worldref" pos="0 0 0"/>
    <geom mesh="tabletop" material="table" class="visual" pos="0 1.0 0.2" quat="1 0 0 1"/>
    <geom mesh="tablelegs" material="table" class="visual" pos="0 1.0 0" rgba="0.2 0.2 0.2 1"/>
    <geom name="table" pos="0 1.0 0.8491" size="0.671 0.667 0.1" type="box" class="collision"/>
    <light mode="fixed" pos="0 1.0 5.5" cutoff="55"  dir="0 0 -1"/>

    <camera name="overhead_cam" fovy="78" pos="0 0.2 2.2" mode="fixed" quat="0.976332 0.216277 0 0"/>
    <camera name="worms_eye_cam" fovy="78" pos="0 -0.377167 1.0316055" mode="fixed" quat="0.672659 0.739953 0 0"/>
    <camera name="side" pos="-1.724 0.904 1.682" xyaxes="0.003 -1.000 0.000 0.393 0.001 0.919"/>

    <body name="cucumber" pos=".2 1 0.98" quat="0.7071067811865476 0.0 0.0 0.7071067811865475">
        <joint name="cucumber_joint" type="free" frictionloss="0.01" />
        <geom condim="4" solimp="0.9 0.95 0.001" solref="0.02 1" friction="2 0.1 0.001" pos="0 0 0"  name="cucumber" type="ellipsoid" size=".015 .1 .015"  rgba=".3 .4 .1 1"/>
        <inertial pos="0 0 0" mass="0.05" diaginertia="0.002 0.002 0.002" />
    </body>  

  </worldbody>
  <include file="bucket.xml"/>
  <include file="joint_position_actuators.xml"/>
  <include file="keyframe_ctrl.xml"/>
</mujoco>
